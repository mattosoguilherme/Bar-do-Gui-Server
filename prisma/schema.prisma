generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  table    Table[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  Menu     Menu?    @relation(fields: [menuId], references: [id])
  menuId   String?
  @@map("user")
}

model Menu {
  id          String   @id @default(uuid())
  stock       Int
  title       String
  imgUrl      String
  product     String
  description String
  price       Float
  table       Table[]
  user        User[]
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt()


  @@map("menu")
}

model Table {
  id          String  @id @default(uuid())
  numberTable Int     @default(autoincrement())
  observation String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
  Menu        Menu?   @relation(fields: [menuId], references: [id])
  menuId      String?
  

  @@map("table")
}
